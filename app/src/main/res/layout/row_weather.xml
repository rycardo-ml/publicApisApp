<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/corner_home_card"
    tools:layout_margin="32dp">

    <include
        android:id="@+id/row_weather_lyt_loading"
        layout="@layout/layout_loading_card"
        tools:visibility="gone"/>

    <include
        android:id="@+id/row_weather_lyt_error"
        layout="@layout/layout_error_card"
        tools:visibility="visible"/>


</androidx.cardview.widget.CardView>